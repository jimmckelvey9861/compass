<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Hourly Compass Overview</h1>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Employees -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="text-gray-600">
          <span class="text-2xl mr-2">👥</span>
          Total Employees
        </div>
      </div>
      <div class="text-3xl font-bold text-blue-600">
        <%= @total_employees %>
      </div>
    </div>

    <!-- Currently Working -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="text-gray-600">
          <span class="text-2xl mr-2">💼</span>
          Currently Working
        </div>
      </div>
      <div class="text-3xl font-bold text-green-600">
        <%= @employees_working_now %>
      </div>
    </div>

    <!-- Today's Shifts -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="text-gray-600">
          <span class="text-2xl mr-2">📅</span>
          Today's Shifts
        </div>
      </div>
      <div class="text-3xl font-bold text-blue-500">
        <%= @active_shifts_today %>
      </div>
    </div>

    <!-- Open Shifts -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="text-gray-600">
          <span class="text-2xl mr-2">🕒</span>
          Open Shifts This Week
        </div>
      </div>
      <div class="text-3xl font-bold text-orange-500">
        <%= @open_shifts_this_week %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-gray-50 rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
    <%= link_to managers_dashboard_path, class: "inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
      <span class="flex items-center">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
        </svg>
        Manage Schedule
      </span>
    <% end %>
  </div>

  <!-- System Status -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">System Status</h2>
    <div class="flex items-center text-gray-600">
      <span class="text-2xl mr-2">🏢</span>
      Organization: <span class="font-medium text-gray-900 ml-2"><%= @organization&.name %></span>
    </div>
  </div>
</div>