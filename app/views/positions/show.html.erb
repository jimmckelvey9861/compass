<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @position.title %></h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= @position.company_name %></p>
  </div>
  
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @position.description %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Location</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @position.location %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Availability Required</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @position.availability_required ? 'Yes' : 'No' %></dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Requirements</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <ul class="list-disc pl-5">
            <% @position.requirements.each do |requirement| %>
              <li><%= requirement %></li>
            <% end %>
          </ul>
        </dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Required Identity Fields</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <ul class="list-disc pl-5">
            <% @position.identity_fields_required.each do |field| %>
              <li><%= field %></li>
            <% end %>
          </ul>
        </dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Video Questions</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <ul class="list-disc pl-5">
            <% @position.video_questions.each do |question| %>
              <li><%= question %></li>
            <% end %>
          </ul>
        </dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Legal Disclosures</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @position.legal_disclosures %></dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Other Information</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @position.other_information %></dd>
      </div>
    </dl>
  </div>

  <div class="bg-gray-50 px-4 py-4 sm:px-6">
    <div class="flex justify-end space-x-3">
      <%= link_to 'Edit', edit_position_path(@position), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to 'Back to List', positions_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
</div>