<%= form_with(model: position) do |form| %>
  <% if position.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>
      <ul>
        <% position.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :company_name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :requirements, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :requirements, value: position.requirements.join("\n"), rows: 4, 
          placeholder: "Enter each requirement on a new line",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :identity_fields_required, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :identity_fields_required, value: position.identity_fields_required.join("\n"), rows: 4,
          placeholder: "Enter each required field on a new line",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :availability_required, class: "block text-sm font-medium text-gray-700" %>
      <%= form.check_box :availability_required, class: "mt-1 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :legal_disclosures, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :legal_disclosures, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :video_questions, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :video_questions, value: position.video_questions.join("\n"), rows: 4,
          placeholder: "Enter each video question on a new line",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :other_information, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :other_information, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>